
<head>
<style type="text/css">
.auto-style1 {
	margin-bottom: 0px;
}
.auto-style2 {
	 width: auto;text-align: center;
</style>
</head>

<h1 class="auto-style2">
    <i class="fa fa-archive"></i>
    Smart Inventory
    <i class="fa fa-times pull-right close-button" close-all-ui></i>
</h1>

<!--<button class="medium" ng-click="smartinventoryCtrl.buyComponents(null, true)" style="width: 150px; margin: 0 auto 0 auto;" localize="buy-all"></button>-->

<div class="auto-style1" style="overflow: auto; height: auto; width: auto;">
	<div class="auto-style2">
	<br>
		<span style="font-size: 20px;" localize="search"></span>		
		<input ng-model="smartinventoryCtrl.search" type= "text" style= "height: 60px; width: 800px"/>
</div>
	<br>
	<table style="width: auto,">
		<thead>
			<tr>
				<td style="height: auto; width: auto"></td>
				<td localize="components" style="text-decoration:underline; height: auto;"></td>
				<td localize="inventory" style="text-decoration:underline; height: auto;"></td>
				<td style="height: auto; width: auto"></td>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="component in smartinventoryCtrl.componentList()">
				<td style="height: auto; width: auto">
				<component class="small" component="::component"></component>
				</td>
				<td localize="{{ component.name }}" style="height:auto;" /td>
				<td style="height: auto; width: auto">{{ component.inventory }}</td>
			<td style="width: auto; height: auto">
				<em>
				<input type="number" ng-model="smartinventoryCtrl.quantity[component.name]" name="{{ component.name }}" 
				style= "height: 60px; width: 200px;">
				</em>
				</td>
				<td style="height: auto; width: auto;">
				<button class="medium" ng-click="smartinventoryCtrl.buyComponents(component.name)" 
						style="width: auto"
                            localize="Buy">
                      
                            </button>
				<button class="medium" ng-click="smartinventoryCtrl.sellComponents(component.name)" 
						style="width: auto"
                            localize="Sell" >
                           </button>
              </td>
			</tr>
		</tbody>
	</table> 
</div>

